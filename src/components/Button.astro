---
const { label } = Astro.props;
---
<a href="/" class="btn">
    { label }
</a>

<style>
    .btn {
        display: inline-block;
        min-width: 100px;
        padding: .6rem 1.25rem;
        border-radius: 4px;
        background: var(--primary-color);
        font-weight: 500;
        font-size: 1.25rem;
        text-align: center;
        color: var(--white-color);
    }
</style>