---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import Posts from '../components/sections/Posts.astro';
import Works from '../components/sections/Works.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} desc={frontmatter.desc}> 

	<Hero title={frontmatter.hero.title} 
			desc={frontmatter.hero.desc}
			textCTA={frontmatter.hero.cta} />

	<Posts />
	<Works />

</BaseLayout>

